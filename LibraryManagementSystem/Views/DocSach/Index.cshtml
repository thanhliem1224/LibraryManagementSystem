@model IEnumerable<LibraryManagementSystem.Models.DocSachTaiCho>

@{
    ViewBag.Title = "Lịch Sử Đọc Sách";
}

<h2 class="text-center">Lịch Sử Đọc Sách</h2>
<br />
<div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4 text-right form-inline">
        <a href="~/DocSach/Create" class="btn btn-primary active" role="button">Thêm Học Sinh Đọc Sách</a>
    </div>
</div>
<br />
@using (Html.BeginForm("Index", "DocSach", FormMethod.Get))
{
    <div class="form-inline" role="form">
        <div>
            <input id="lopHS" name="lopHS" type="text" class="form-control" placeholder="Tìm Lớp">
        </div>
        <div>
            <input id="tenHS" name="tenHS" type="text" class="form-control" placeholder="Tìm Học Sinh">
        </div>
        <div>
            <label>Sau ngày</label>
            <input name="ngayMuonFrom" type="date" class="form-control" />
            <label>Trước ngày</label>
            <input name="ngayMuonTo" type="date" class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
}
<div class="table-responsive">
    <table class="table">
        @{
            int count = 1; // đếm số thứ tự
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HocSinh.Lop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HocSinh.TenHS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HocSinh.NgaySinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ngay)
                </th>
            </tr>

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(count.ToString(), "Edit", new { id = item.ID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HocSinh.Lop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HocSinh.TenHS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HocSinh.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngay)
                    </td>
                </tr>
                count++;
            }
        }
    </table>
</div>