@model PagedList.IPagedList<LibraryManagementSystem.Models.HocSinh>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Danh Sách Học Sinh</h2>
<br />
@using (Html.BeginForm("Index", "HocSinh", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-8">

            <div class="form-inline" role="form">
                <div class="form-group">
                    <input id="tenHS" name="tenHS" type="text" class="form-control" placeholder="Tìm Học Sinh" value="@ViewBag.CurrentTenHS">
                </div>
                <div class="form-group">
                    <input id="lopHS" name="lopHS" type="text" class="form-control" placeholder="Tìm Lớp" value="@ViewBag.CurrentLopHS">
                </div>
                <button type="submit" class="btn btn-default">Tìm</button>
            </div>
            <div hidden>
                <input type="text" name="sortOrder" value="@ViewBag.CurrentSort" />
            </div>

        </div>
        <div class="col-md-4 text-right form-inline">
            <a href="HocSinh/Create" class="btn btn-primary active" role="button">Thêm Mới</a>
            <a href="HocSinh/ThemHocSinhTuFile" class="btn btn-primary active" role="button">Thêm Từ File</a>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-offset-8 col-md-4 text-right form-inline">
            <label class="control-label text-right">Số dòng trong 1 trang: </label>
            @Html.DropDownList("pageSize", null, new { @class = "form-control", @onchange = "this.form.submit()" })
        </div>
    </div>
}
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.ActionLink("Tên học sinh", "Index", new
           {
               sortOrder = ViewBag.sortTenHS,
               lopHS = ViewBag.CurrentLopHS,
               tenHS = ViewBag.CurrentTenHS,
               pageSize = ViewBag.CurrentPageSize
           })
            </th>
            <th>
                @Html.ActionLink("Lớp", "Index", new
           {
               sortOrder = ViewBag.sortLop,
               lopHS = ViewBag.CurrentLopHS,
               tenHS = ViewBag.CurrentTenHS,
               pageSize = ViewBag.CurrentPageSize
           })
            </th>
            <th>
                @Html.ActionLink("Ngày Sinh", "Index", new
           {
               sortOrder = ViewBag.sortNgaySinh,
               lopHS = ViewBag.CurrentLopHS,
               tenHS = ViewBag.CurrentTenHS,
               pageSize = ViewBag.CurrentPageSize
           })
            </th>
        </tr>
        @foreach (var item in Model)
        {
            string url = "HocSinh/Edit/" + item.ID;

            <tr class='clickable-row' data-href='@url'>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lop)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
            </tr>
        }
    </table>
</div>
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new
    {
        page,
        lopHS = ViewBag.CurrentLopHS,
        tenHS = ViewBag.CurrentTenHS,
        sortOrder = ViewBag.CurrentSort,
        pageSize = ViewBag.CurrentPageSize
    }))

@section Scripts{
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".clickable-row").click(function () {
                window.document.location = $(this).data("href");
            });
        });
    </script>
}