@model LibraryManagementSystem.Models.Sach

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết</h2>

<div>
    <h4>Sách</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ChuDe.TenChuDe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChuDe.TenChuDe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SachID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SachID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenSach)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayNhap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        @if (ViewBag.InfoMuon != null)
        {
            foreach (var item in ViewBag.InfoMuon)
            {
                <dt>
                    Tên Học Sinh
                </dt>

                <dd>
                    @item.HocSinh.TenHS
                </dd>
                <dt>
                    Ngày mượn
                </dt>

                <dd>
                    @item.NgayMuon
                </dd>
                <dt>
                    Hạn Trả
                </dt>

                <dd>
                    @item.HanTra
                </dd>
            }
        }
        @if (ViewBag.InfoMat != null)
        {
            foreach (var item in ViewBag.InfoMuon)
            {
                <dt>
                    Tên Học Sinh
                </dt>

                <dd>
                    @item.HocSinh.TenHS
                </dd>
                <dt>
                    Ngày mượn
                </dt>

                <dd>
                    @item.NgayMuon
                </dd>
                <dt>
                    Ngày Báo Mất
                </dt>

                <dd>
                    @item.NgayTra
                </dd>
            }
        }
        @if (ViewBag.InfoThanhLy != null)
        {
            foreach (var item in ViewBag.InfoThanhLy)
            {
                <dt>
                    Ngày Thanh Lý
                </dt>

                <dd>
                    @item.Ngay
                </dd>

            }
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
