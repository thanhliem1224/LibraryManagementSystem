@{
    ViewBag.Title = "Thống Kê";
}
<div class="text-center">
    <h2>Báo Cáo Thống Kê</h2>
</div>
<br />
@using (Html.BeginForm("LuaChon", "BaoCao"))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label for="type1" class="control-label col-md-2">Tháng <input id="type1" type="radio" name="type" value="0" required /></label>
            <div class="col-md-10">
                <input type="month" name="date_month" value=@DateTime.Now.Date placeholder="Chọn Ngày" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="type1" class="control-label col-md-2">Năm <input id="type2" type="radio" name="type" value="1" /></label>
            <div class="col-md-10">
                <input type="month" name="date_year" value=@DateTime.Now.Date placeholder="Chọn Ngày" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="type1" class="control-label col-md-2">Khoảng Thời Gian <input id="type3" type="radio" name="type" value="2" /></label>
            <div class="col-md-10">
                <input type="month" name="date_start" value=@DateTime.Now.Date placeholder="Chọn Ngày Bắt Đầu" class="form-control" />
                <input type="month" name="date_finish" value=@DateTime.Now.Date placeholder="Chọn Ngày Kết Thúc" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận" class="btn btn-default" />
            </div>
        </div>
    </div>

}