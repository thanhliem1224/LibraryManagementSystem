@{
    ViewBag.Title = "Thống Kê";
}
<div class="text-center">
    <h2>Báo Cáo Thống Kê</h2>
</div>
<br />
@using (Html.BeginForm("LuaChon", "BaoCao"))
{

    <div class="form-horizontal">
        <div class="form-group">
            <label for="type1" class="control-label col-md-2">Tháng <input id="type1" type="radio" name="type" value="0" required /></label>
            <div class="col-md-4">
                <input type="month" name="date" placeholder="Chọn Ngày" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="type1" class="control-label col-md-2">Khoảng Thời Gian <input id="type3" type="radio" name="type" value="2" /></label>
            <div class="col-md-4">
                <input type="month" name="date_finish" placeholder="Chọn Ngày Kết Thúc" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="muonsach_status" checked>Bảng Thống Kê Hoạt Động Mượn Sách</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="docsach_status" checked>Bảng Thống Kê Hoạt Động Đọc Sách Tại Thư Viện</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="theloaiyeuthich_status" checked>Thể Loại Sách Được Mượn Nhiều</label>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="muonsachquahan_status" checked>Danh Sách Học Sinh Mượn Sách Quá Hạn</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="thanhly_status" checked>Danh Sách Sách Đã Thanh Lý</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 checkbox">
                <label><input type="checkbox" value="true" name="sachthuvien_status" checked>Bảng Thống Kê Sách Có Trong Thư Viện</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận" class="btn btn-default" />
            </div>
        </div>
    </div>


}