@model LibraryManagementSystem.Models.ChuDe

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Thêm chủ đề</h4>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
           
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TenChuDe, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
                </div>
            </div>
           
        </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Hủy</button>
            <input class="btn btn-success" type="submit" value="Thêm" />
        </div>
}
