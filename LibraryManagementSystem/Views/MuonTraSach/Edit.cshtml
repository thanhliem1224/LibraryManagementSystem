@model LibraryManagementSystem.Models.MuonTraSach

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MuonTraSach</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.SachID, "SachID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SachID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SachID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HocSinhID, "HocSinhID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("HocSinhID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HocSinhID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayMuon, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ 
                    string _year_muon = Model.NgayMuon.Year.ToString();
                    string _month_muon = Model.NgayMuon.Month.ToString();
                    string _day_muon = Model.NgayMuon.Day.ToString();

                    string _date_muon = _year_muon.PadLeft(4, '0') + "-" + _month_muon.PadLeft(2, '0') + "-" + _day_muon.PadLeft(2, '0');

                }
                <input class="form-control" name="NgayMuon" type="date" value="@_date_muon" />
                @Html.HiddenFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HanTra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string _year_hantra = Model.HanTra.Year.ToString();
                    string _month_hantra = Model.HanTra.Month.ToString();
                    string _day_hantra = Model.HanTra.Day.ToString();

                    string _date_hantra = _year_hantra.PadLeft(4, '0') + "-" + _month_hantra.PadLeft(2, '0') + "-" + _day_hantra.PadLeft(2, '0');

                }
                <input class="form-control" name="HanTra" type="date" value="@_date_hantra" />
                @Html.HiddenFor(model => model.HanTra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HanTra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayTra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string _year_ngaytra = Model.NgayTra.Value.Year.ToString();
                    string _month_ngaytra = Model.NgayTra.Value.Month.ToString();
                    string _day_ngaytra = Model.NgayTra.Value.Day.ToString();

                    string _date_ngaytra = _year_ngaytra.PadLeft(4, '0') + "-" + _month_ngaytra.PadLeft(2, '0') + "-" + _day_ngaytra.PadLeft(2, '0');

                }
                <input class="form-control" name="NgayTra" type="date" value="@_date_ngaytra" />
                @Html.HiddenFor(model => model.NgayTra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
