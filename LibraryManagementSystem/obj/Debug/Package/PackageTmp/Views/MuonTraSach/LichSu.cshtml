@model IEnumerable<LibraryManagementSystem.Models.MuonTraSach>
@{
    ViewBag.Title = "Lịch Sử Mượn Trả Sách";
}
<h2 class="text-center">Lịch Sử Mượn Trả Sách</h2>
<br />
<div class="row">
    <div class="col-md-8">
        @Html.ActionLink("Danh Sách Học Sinh Đang Mượn Sách", "Index")
    </div>
    <div class="col-md-4 text-right form-inline">
        <a href="~/MuonTraSach/TimHocSinh" class="btn btn-primary active" role="button">Thêm Mới</a>
    </div>
</div>
<br />
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HocSinh.TenHS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sach.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HanTra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTra)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HocSinh.TenHS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sach.IDandTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayMuon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HanTra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTra)
                </td>
                <td>
                    <div class="btn-group navbar-btn">
                        @Html.ActionLink("Trả Sách", "TraSach", new { id = item.ID }, new { @class = "btn btn-default btn-xs" })
                        <button data-toggle="dropdown" class="btn btn-default btn-xs dropdown-toggle"><span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Báo Mất", "BaoMat", new { id = item.ID })</li>
                            <li>@Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.ID })</li>
                            <li>@Html.ActionLink("Chi Tiết", "Details", new { id = item.ID })</li>
                            <li>@Html.ActionLink("Xóa", "Delete", new { id = item.ID })</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>