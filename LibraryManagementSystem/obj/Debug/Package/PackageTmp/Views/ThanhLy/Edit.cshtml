@model LibraryManagementSystem.Models.ThanhLy

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ThanhLy</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.SachID, "SachID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SachID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SachID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ngay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string _year = Model.Ngay.Year.ToString();
                    string _month = Model.Ngay.Month.ToString();
                    string _day = Model.Ngay.Day.ToString();

                    string _date = _year.PadLeft(4, '0') + "-" + _month.PadLeft(2, '0') + "-" + _day.PadLeft(2, '0');

                }
                <input class="form-control" name="Ngay" type="date" value="@_date" />
                @Html.HiddenFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
