@model LibraryManagementSystem.Models.DocSachTaiCho

@{
    ViewBag.Title = "Edit";
}

<h2>Sửa Học Sinh Đọc Sách</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.HocSinhID, "HocSinhID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("HocSinhID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HocSinhID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ngay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    string _year = Model.Ngay.Year.ToString();
                    string _month = Model.Ngay.Month.ToString();
                    string _day = Model.Ngay.Day.ToString();

                    string _date = _year.PadLeft(4, '0') + "-" + _month.PadLeft(2, '0') + "-" + _day.PadLeft(2, '0');

                }
                <input class="form-control" name="Ngay" type="date" value="@_date" />

                @Html.HiddenFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control", @value = @_date } })
                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác Nhận Sửa" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Danh Sách Học Sinh Đọc Sách", "Index")
</div>
